<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yaozhengzheng.edittextdemo.Main2Activity">

    <com.example.yaozhengzheng.edittextdemo.MaterialEditText
        android:id="@+id/edt_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="用户名"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="18dp"
        app:labelColor="#18b4ed"
        app:labelText="用户名"
        app:maxLength="12"
        app:overlengthColor="@android:color/holo_red_light"
        app:preLineColor="#18b4ed" />

    <Button
        android:id="@+id/btn_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:text="确定" />
</LinearLayout>
