<?xml version="1.0" encoding="utf-8"?>
<com.example.yaozhengzheng.edittextdemo.DampView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dampview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.yaozhengzheng.edittextdemo.QqActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop" />

                <TextView
                    android:drawableLeft="@mipmap/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:text="返回"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:orientation="horizontal" >

            <com.example.yaozhengzheng.edittextdemo.RoundImageView
                android:id="@+id/img_personalcenter_avator"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="20dp"
                android:clickable="false"
                android:src="@mipmap/moren"
                imagecontrol:border_outside_color="#FFFFFF"
                imagecontrol:border_thickness="1dp" />
        </RelativeLayout>
        <ListView
            android:entries="@array/place"
            android:id="@+id/listview"
            android:cacheColorHint="@color/colorAccent"
            android:dividerHeight="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</com.example.yaozhengzheng.edittextdemo.DampView>
